{
  "name": "movelazy",
  "displayName": "movelazy",
  "icon": "media/icon.png",
  "publisher": "Movelazy",
  "description": "move with GUI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "movelazy.openSimulator",
        "title": "open simulator"
      },
      {
        "command": "movelazy.openWebview",
        "title": "open webview"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "move-simulator",
          "title": "Move Simulator",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "move-simulator": [
        {
          "type": "webview",
          "id": "MovelazyView",
          "name": "Move Simulator",
          "icon": "media/logo.svg",
          "contextualTitle": "Move Simulator"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview && npm install",
    "vscode:prepublish": "npm run compile && npm run webview:build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "webview:build": "cd webview && npm run build",
    "webview:dev": "cd webview && npm run dev"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "ethers": "^5.7.2",
    "glob": "^11.0.0",
    "hardhat": "^2.22.15",
    "lru-cache": "^11.0.1",
    "movelazy": "file:"
  }
}
